# ========================================
# CONFIGURACIÓN DE SLACK
# ========================================

# Token de usuario de Slack (REQUERIDO)
# Obtener desde: https://api.slack.com/apps -> Tu App -> OAuth & Permissions -> User OAuth Token
SLACK_USER_TOKEN=xoxp-your-user-token-here

# ========================================
# ARCHIVOS DE CONFIGURACIÓN
# ========================================

# Archivos principales (por defecto)
CONFIG_FILE=config/Config.json
CURRENT_STATUS_FILE=config/current_status.json

# Archivos de prueba (para testing)
# CONFIG_FILE=tests/test_config.json
# CURRENT_STATUS_FILE=tests/test_current_status.json

# ========================================
# CONFIGURACIÓN DE ESTADOS
# ========================================

# Status para usuarios en la oficina
DEFAULT_STATUS="At Simpat Tech Office"
STATUS_EMOJI=":simpat:"

# Status para usuarios ausentes (opcional)
AWAY_STATUS="Away"
AWAY_STATUS_EMOJI=":afk:"

# ========================================
# CONFIGURACIÓN DE LOGGING (OPCIONAL)
# ========================================

# Nivel de logging (DEBUG, INFO, WARNING, ERROR)
LOG_LEVEL=INFO

# Archivo de log personalizado (opcional)
# LOG_FILE=logs/custom.log

# ========================================
# CONFIGURACIÓN DE RED (OPCIONAL)
# ========================================

# Timeout para ping en milisegundos (por defecto: 1000ms)
PING_TIMEOUT=1000

# Número máximo de workers para escaneo paralelo (por defecto: 10)
MAX_WORKERS=10

# ========================================
# CONFIGURACIÓN DE RETRY (OPCIONAL)
# ========================================

# Número máximo de reintentos para operaciones de Slack
MAX_RETRIES=3

# Delay base para retry en segundos
RETRY_BASE_DELAY=1.0

# ========================================
# EJEMPLOS DE USO
# ========================================

# Para usar archivos de prueba:
# CONFIG_FILE=tests/test_config.json
# CURRENT_STATUS_FILE=tests/test_current_status.json

# Para cambiar el status personalizado:
# DEFAULT_STATUS="En la oficina"
# STATUS_EMOJI=":office:"

# Para debugging:
# LOG_LEVEL=DEBUG

# ========================================
# NOTAS IMPORTANTES
# ========================================

# 1. NUNCA compartas tu SLACK_USER_TOKEN en repositorios públicos
# 2. El archivo .env debe estar en .gitignore
# 3. Copia este archivo como .env y modifica los valores según necesites
# 4. Para obtener el token: https://api.slack.com/apps -> Tu App -> OAuth & Permissions
# 5. El token debe tener permisos de: users:read, users.profile:read, users.profile:write
